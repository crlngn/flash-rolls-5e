<div>
  <ul class="actors">
    <li class="options">
      <div class="selection-row">
        <label for="flash-rolls-toggle" class="crlngn-switch">
          <input type="checkbox" name="flash-rolls-toggle" id="flash-rolls-toggle" {{#if rollRequestsEnabled}}checked{{/if}} />
          <div class="track"></div>
          <div class="handle"></div>
          {{localize "CRLNGN_ROLLS.ui.inputs.toggleRollRequests"}}
        </label>
        <i class="icon fas {{#if actorsLocked}}fa-lock-keyhole{{else}}fa-lock-keyhole-open{{/if}}" id="crlngn-actors-lock"></i>
      </div>

      {{!-- Skip Dialogs Toggle --}}
      <div class="selection-row">
        <label for="crlngn-skip-dialogs" class="crlngn-switch">
          <input type="checkbox" name="crlngn-skip-dialogs" id="crlngn-skip-dialogs" {{#if skipRollDialog}}checked{{/if}}>
          <div class="track"></div>
          <div class="handle"></div>
          {{localize "CRLNGN_ROLLS.ui.inputs.skipRollDialog"}}
        </label>
      </div>

      {{!-- Select All Toggle --}}
      <div class="selection-row">
        <label for="crlngn-actors-all" class="crlngn-switch">
          <input type="checkbox" name="crlngn-actors-all" id="crlngn-actors-all" {{#if selectAllOn}}checked{{/if}}>
          <div class="track"></div>
          <div class="handle"></div>
          {{localize "CRLNGN_ROLLS.ui.inputs.selectAll"}}
        </label>
      </div>
    </li>
    
    <li class="options-toggle">
      &nbsp;
    </li>

    <li class="actor-list">
      <ul>
      {{#each actors as |actor|}}
        <li class="actor{{#if actor.selected}} selected{{/if}}" data-id="{{actor.id}}" data-selected="{{actor.selected}}">
          {{!-- <input type="checkbox" id="crlngn-pc-{{ actor.id }}" data-id="{{ actor.id }}"> --}}
          <div class="actor-select" data-id="{{actor.id}}">
            <i class="icon fas fa-{{#if actor.selected}}circle-dot{{else}}circle{{/if}}"></i>
          </div>
          <div class="actor-data">
            {{!-- <span class="actor-name">{{actor.name}}</span> --}}
            {{#if ../showNames}}<span class="actor-name">{{ actor.name }}</span>{{/if}}
            <ul class="actor-stats">
              {{#each actor.crlngnStats as |prop|}}
                <li class="actor-stat">
                  <span class="stat-abbrev">{{ prop.abbrev }}</span>
                  <span class="stat-value">{{ prop.value }}</span>
                </li>
              {{/each}}
            </ul>
          </div>
          <div class="actor-img">
            <img src="{{ actor.img }}" alt="{{ actor.name }}" />
          </div>
        </li>
      {{/each}}
      </ul>
    </li>

    <li class="actors-tabs">
      <button class="actor-tab npc-tab{{#if (eq selectedTab "npc")}} active{{/if}}" data-tab="npc">NPCs</button>
      <button class="actor-tab pc-tab{{#if (eq selectedTab "pc")}} active{{/if}}" data-tab="pc">PCs</button>
    </li>
  </ul>

  <!-- Request Types -->
  <ul class="request-types{{#if requestTypes}} visible{{/if}}">
    {{#each requestTypes as |requestType|}}
      <li data-id="{{ requestType.id }}" class="{{#if requestType.rollable}}rollable{{/if}}{{#if requestType.selected}} selected{{/if}}">
        {{#if requestType.hasSubList}}
          <i class="icon fas fa-caret-left"></i>
        {{else}}
          <i class="icon fas fa-dice-d20"></i>
        {{/if}} 
        {{ requestType.name }}
      </li>
    {{/each}}
  </ul>

  <!-- Roll Types -->
  <ul class="roll-types{{#if rollTypes}} visible{{/if}}">
    {{#each rollTypes as |rollType|}}
      <li data-id="{{ rollType.id }}" class="rollable">
        <i class="icon fas fa-dice-d20"></i>
        {{ rollType.name }}
      </li>
    {{/each}}
  </ul>
</div>