{{#if showDC}}
<div class="form-group dc">
  <label for="flash5e-dc">{{localize "DND5E.AbbreviationDC"}}</label>
  <input type="number" name="dc" value="{{dcValue}}" id="flash5e-dc" />
</div>
{{/if}}

{{#if showSendRequest}}
<div class="form-group send-request">
  <label for="flash5e-send-request" class="flash5e-switch">
    <input type="checkbox" name="flash5e-send-request" id="flash5e-send-request" {{#if sendRequest}}checked{{/if}} />
    <div class="track"></div>
    <div class="handle"></div>
    {{localize "FLASH_ROLLS.ui.dialogs.sendRequest"}}
  </label>
</div>
{{/if}}